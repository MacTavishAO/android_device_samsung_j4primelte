<resources>

    <!-- Flag indicating whether we should enable the automatic brightness in Settings.
         config_hardware_automatic_brightness_available is not set, so we will use software implementation -->
    <bool name="config_automatic_brightness_available">true</bool>

    <!-- If this is true, the screen will come on when you unplug usb/power/whatever. -->
    <bool name="config_unplugTurnsOnScreen">true</bool>
	
	<!-- If it's empty hotspot option in settings will disappear. -->
	<string-array name="config_tether_wifi_regexs">
        <item>wigig0</item>
        <item>wlan0</item>
    </string-array>
	
	<!-- If it's empty usb tethering option in settings will disappear. -->
	<string-array name="config_tether_usb_regexs">
        <item>usb\\d</item>
        <item>rndis\\d</item>
        <item>ncm\\d</item>
    </string-array>
	
	<!-- If it's empty bluetooth option in settings will disappear. -->
	<string-array name="config_tether_bluetooth_regexs">
        <item>bnep\\d</item>
        <item>bt-pan</item>
    </string-array>
	
	<!-- Auto brightness values. -->
	<integer-array name="config_autoBrightnessLevels">
        <item>8</item>
        <item>15</item>
        <item>25</item>
        <item>100</item>
        <item>500</item>
        <item>1500</item>
        <item>5000</item>
        <item>20000</item>
    </integer-array>
	
	<!-- Auto brightness LCD values. -->
	<integer-array name="config_autoBrightnessLcdBacklightValues">
        <item>6</item>
        <item>19</item>
        <item>38</item>
        <item>55</item>
        <item>95</item>
        <item>142</item>
        <item>185</item>
        <item>255</item>
        <item>256</item>
    </integer-array>

    <!-- Whether device ignores the RSSNR signal implementation -->
    <bool name="config_ignoreRssnrSignalLevel">true</bool>

    <!-- Define that we use a higher screen ratio (18:9) than standard (16:9) -->
    <bool name="config_haveHigherAspectRatioScreen">true</bool>
</resources>
